{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ],
  "env": {
    "SESSION_SECRET": "@session-secret",
    "DATABASE_URL": "@database-url",
    "NODE_ENV": "production",
    "USE_HTTPS": "true"
  },
  "functions": {
    "server/index.ts": {
      "maxDuration": 30
    }
  }
}
